{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "./dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "node_modules/@types",
      "src/types" // Add this line if you're using custom type declarations
    ]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}